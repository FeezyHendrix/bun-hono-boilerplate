{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "types": ["bun-types"],
    "module": "ESNext",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env"],
  "exclude": ["node_modules"]
}
